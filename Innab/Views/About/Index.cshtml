@model HomeVM
@{
    ViewData["Title"] = "Index";
}

<div class="banner-area">
    <h2>Haqqımızda</h2>
</div>

<!-- Aabout Hissesi -->

<section class="about-section">
    <div class="container">
        <div class="row clearfix">

            <!--Content Column-->
            <div class="content-column col-md-6 col-sm-12 col-xs-12">
                <div class="inner-column">
                    <div class="sec-title">
                        <div class="title">Haqqımızda</div>
                        <h2>@Model.About.Title</h2>
                    </div>
                    <div class="text">
                        @Model.About.Desc
                    </div>
                    <div class="email">@Model.About.Contact</div>
                    <a href="about.html" class="theme-btn btn-style-three">Daha Çox Məlumat</a>
                </div>
            </div>

            <!--Image Column-->
            <div class="image-column col-md-6 col-sm-12 col-xs-12">
                <div class="inner-column " data-wow-delay="0ms" data-wow-duration="1500ms">
                    <div class="image">
                        <img src="~/img/@Model.AboutPhoto.ImageUrl" alt="" height="550px" width="100px">
                        <div class="overlay-box">
                            <div class="year-box">@Html.Raw(Model.AboutPhoto.Text)</div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- TimeLine Hissesi -->

<div class="about-text">
    <h1>Biz kimik?</h1>
</div>

<div class="container-t">
    @for (int i = 0; i < Model.Timelines.Count; i++)
    {
        var item = Model.Timelines[i];
        <div class="timeline-block @(i % 2 == 0 ? "timeline-block-right" : "timeline-block-left")">
            <div class="marker"></div>
            <div class="timeline-content">
                <h3>@item.Title</h3>
                <p>@item.Desc</p>
            </div>
        </div>
    }

    
</div>

<!-- Partnior Section -->
<div class="partnior-container">
    @await Component.InvokeAsync("CustomerDisplay")
</div>

