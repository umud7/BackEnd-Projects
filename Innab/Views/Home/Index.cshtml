<!-- Feature Section -->

<section class="features__section">
    <div class="features__top">
        <h1>Video dərslər</h1>
    </div>

    <div class="features__container">
       @foreach (var item in Model.Features)
        {
            <div class="feature__item">
                <i class="fa-solid @item.Icon"></i>

                <div class="featureItem__info">
                    <h3>@item.Name</h3>
                    <p>@item.Desc</p>
                </div>
            </div>
        }
        
    </div>
</section>

<!-- Counter Section -->
<div class="counter-wrapper">
    @foreach (var item in Model.Counters)
    {
        <div class="counter">
            <h1 class="count" data-target="@item.Target">0</h1>
            <p>@item.Text</p>
        </div>
    }
</div>

<section class="amazing_feature">
    <div class="container">

        <div class="row">
            <div class="col-md-12 text-center heading-main">
                <h2 class="heading">Xidmət və Layihələr</h2>
                <div class="separator"><i class="fa fa-home below-line-about-icon"></i></div>
            </div>
        </div>
        <div class="row">
           @foreach (var item in Model.ServiceAndProjects)
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single_feature">
                        <div class="feature_icon"><i class="fa-solid @item.Icon"></i></div>
                        <h3>@item.Name</h3>
                        <p>@item.Desc</p>
                    </div>
                </div>
                <!-- END COL-->
            }
        </div><!--- END ROW -->
    </div><!--- END CONTAINER -->
</section>

<!-- Partnior Section -->
<div class="partnior-container">
    @await Component.InvokeAsync("CustomerDisplay")
</div>

