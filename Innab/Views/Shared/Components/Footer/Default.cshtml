@model Bio
<footer class="footer-section">
    <div class="container">
        <div class="footer-cta pt-5 pb-5">
            <div class="row">
                <div class="col-xl-4 col-md-4 mb-30">
                    <div class="single-cta">
                        <i class="fas fa-map-marker-alt"></i>
                        <div class="cta-text">
                            <h4>Ünvan:</h4>
                            <span>@Model.Unvan</span>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-md-4 mb-30">
                    <div class="single-cta">
                        <i class="fas fa-phone"></i>
                        <div class="cta-text">
                            <h4>Telefon:</h4>
                            <span>@Html.Raw(Model.Telefon)</span>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-md-4 mb-30">
                    <div class="single-cta">
                        <i class="far fa-envelope-open"></i>
                        <div class="cta-text">
                            <h4>Email:</h4>
                            <span>@Html.Raw(Model.Email)</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-content pt-5 pb-5">
            <div class="row">
                <div class="col-xl-4 col-lg-4 mb-50">
                    <div class="footer-widget">
                        <div class="footer-logo">
                            <a href="index.html"><img src="~/img/@Model.FooterLogo" class="img-fluid" alt="logo"></a>
                        </div>
                        <div class="footer-text">
                            <p>@Model.Desc</p>
                        </div>
                        <div class="footer-social-icon">
                            <span>Bizi izləyin</span>
                            <a href="https://www.facebook.com/innab.org"><i class="fab fa-facebook-f facebook-bg"></i></a>
                            <a href="https://www.linkedin.com/school/innab.org/"><i class="fab fa-linkedin linkedin-bg"></i></a>
                            <a href="https://www.youtube.com/c/INNABonline"><i class="fab fa-youtube youtube-bg"></i></a>
                            <a href="https://www.instagram.com/innab.az/"><i class="fab fa-instagram instagram-bg"></i></a>
                            <a href="https://www.linkedin.com/school/innab.org/"><i class="fab fa-tiktok tiktok-bg"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4 col-md-6 mb-30">
                    <div class="footer-widget">
                        <div class="footer-widget-heading">
                            <h3>Faydalı Linklər</h3>
                        </div>
                        <ul>
                            <li><a href="index.html">Ana Səhifə</a></li>
                            <li><a href="about.html">Haqqımızda</a></li>
                            <li><a href="korporativ.html">Korporativ</a></li>
                            <li><a href="telimler.html">Təlimlər</a></li>
                            <li><a href="blog.html">Bloq</a></li>
                            <li><a href="contact.html">Contact</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4 col-md-6 mb-50">
                    <div class="footer-widget">
                        <div class="footer-widget-heading">
                            <h3>Abonə Olun</h3>
                        </div>
                        <div class="footer-text mb-25">
                            <p>Email Address</p>
                        </div>
                        <div class="subscribe-form">
                            <form action="#">
                                <input type="email" placeholder="Email Address">
                                <button><i class="fab fa-telegram-plane"></i></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="copyright-area">
        <div class="container">
            <div class="row">
                <div class="col-xl-6 col-lg-6 text-center text-lg-left">
                    <div class="copyright-text">
                        <p>Copyright &copy; 2023. Bütün hüquqlar qorunur</p>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 d-none d-lg-block text-right">
                    <div class="footer-menu">
                        <ul>
                            <li><a href="index.html">Ana Səhifə</a></li>
                            <li><a href="about.html">Haqqımızda</a></li>
                            <li><a href="korporativ.html">Korporativ</a></li>
                            <li><a href="telimler.html">Təlimlər</a></li>
                            <li><a href="blog.html">Bloq</a></li>
                            <li><a href="contact.html">Contact</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>